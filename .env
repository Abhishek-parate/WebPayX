# =============================================================================
# SaaS Multi-Tenant Financial Services Platform - Environment Variables
# =============================================================================
# Copy this file to .env and update the values for your environment

# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
HOST=127.0.0.1
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://postgres:1234@localhost:5432/saas_platform
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600

DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=1234
DB_NAME=saas_1

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Security Settings
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourcompany.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayU
PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_salt
PAYU_MERCHANT_ID=your_merchant_id

# Cashfree
CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret

# File Storage Configuration
# Local storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# API Rate Limiting
API_RATE_LIMIT=1000 per hour
API_BURST_LIMIT=100 per minute

# Background Task Configuration (Celery)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# External API Configurations

# Mobile Recharge API
RECHARGE_API_URL=https://api.example.com/recharge
RECHARGE_API_KEY=your_recharge_api_key
RECHARGE_API_SECRET=your_recharge_api_secret

# Bill Payment API
BILLPAY_API_URL=https://api.example.com/billpay
BILLPAY_API_KEY=your_billpay_api_key
BILLPAY_API_SECRET=your_billpay_api_secret

# Money Transfer API
MONEY_TRANSFER_API_URL=https://api.example.com/transfer
MONEY_TRANSFER_API_KEY=your_transfer_api_key
MONEY_TRANSFER_API_SECRET=your_transfer_api_secret

# AEPS API
AEPS_API_URL=https://api.example.com/aeps
AEPS_API_KEY=your_aeps_api_key
AEPS_API_SECRET=your_aeps_api_secret

# KYC Verification API
KYC_API_URL=https://api.example.com/kyc
KYC_API_KEY=your_kyc_api_key
KYC_API_SECRET=your_kyc_api_secret

# Bank Account Verification
BANK_VERIFICATION_API_URL=https://api.example.com/bank-verify
BANK_VERIFICATION_API_KEY=your_bank_verify_key

# WhatsApp Business API (optional)
WHATSAPP_BUSINESS_ACCOUNT_ID=your_whatsapp_business_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_PUSH_NOTIFICATIONS=False

# Business Rules Configuration
DEFAULT_COMMISSION_RATE=2.5
MAX_DAILY_TRANSACTION_LIMIT=100000
MAX_MONTHLY_TRANSACTION_LIMIT=500000
MIN_WALLET_BALANCE=10
KYC_REQUIRED_AMOUNT=50000

# Timezone Configuration
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,te,ta,ml

# Development Tools
FLASK_DEBUG_TB_ENABLED=True
FLASK_DEBUG_TB_INTERCEPT_REDIRECTS=False

# Testing Configuration
TESTING=False
TEST_DATABASE_URL=postgresql://postgres:1234@localhost:5432/test_saas_db

# Production Specific Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# SESSION_COOKIE_SECURE=True
# WTF_CSRF_ENABLED=True
# SSL_REDIRECT=True

# Load Balancer and Proxy Settings
# BEHIND_PROXY=True
# PROXY_COUNT=1

# Performance Settings
SQLALCHEMY_ENGINE_OPTIONS_POOL_SIZE=20
SQLALCHEMY_ENGINE_OPTIONS_MAX_OVERFLOW=30
SQLALCHEMY_ENGINE_OPTIONS_POOL_RECYCLE=3600

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains

# API Documentation
API_TITLE=SaaS Financial Platform API
API_VERSION=v1
API_DESCRIPTION=Multi-tenant financial services platform API

# Webhook URLs (for external services to call back)
WEBHOOK_BASE_URL=https://yourdomain.com/webhooks
PAYMENT_SUCCESS_WEBHOOK=/payment/success
PAYMENT_FAILURE_WEBHOOK=/payment/failure
KYC_STATUS_WEBHOOK=/kyc/status
TRANSACTION_STATUS_WEBHOOK=/transaction/status

# Compliance and Regulatory
COMPLIANCE_MODE=sandbox
PCI_DSS_ENABLED=False
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# Multi-tenant Configuration
ENABLE_SUBDOMAIN_ROUTING=True
DEFAULT_TENANT_CODE=DEFAULT
TENANT_ISOLATION_LEVEL=strict

# Feature Flags
ENABLE_MOBILE_RECHARGE=True
ENABLE_DTH_RECHARGE=True
ENABLE_BILL_PAYMENT=True
ENABLE_MONEY_TRANSFER=True
ENABLE_AEPS=True
ENABLE_WALLET_TOPUP=True
ENABLE_QR_CODE_PAYMENTS=True
ENABLE_UPI_PAYMENTS=True
ENABLE_CRYPTO_PAYMENTS=False

# Advanced Security
ENABLE_2FA=True
ENABLE_IP_WHITELIST=False
ALLOWED_IPS=127.0.0.1,::1
ENABLE_DEVICE_FINGERPRINTING=True
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800  # 30 minutes

# Reporting and Analytics
ENABLE_ANALYTICS=True
ANALYTICS_PROVIDER=custom
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
ENABLE_REAL_TIME_REPORTS=True

# Backup and Disaster Recovery
ENABLE_AUTOMATED_BACKUPS=True
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_STORAGE_TYPE=local  # local, s3, gcp, azure
DISASTER_RECOVERY_SITE=https://dr.yourdomain.com

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=True
SLOW_QUERY_THRESHOLD=1000  # milliseconds
ENABLE_QUERY_PROFILING=False
MAX_REQUEST_SIZE=16777216  # 16MB

# Internationalization
DEFAULT_CURRENCY=INR
SUPPORTED_CURRENCIES=INR,USD,EUR,GBP
CURRENCY_CONVERSION_API=exchangerate-api.com
CURRENCY_API_KEY=your-currency-api-key

# Third-party Integrations
ENABLE_SLACK_NOTIFICATIONS=False
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

ENABLE_DISCORD_NOTIFICATIONS=False
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Social Login (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# API Gateway Configuration
API_GATEWAY_URL=https://api.yourdomain.com
API_GATEWAY_KEY=your-api-gateway-key
ENABLE_API_VERSIONING=True

# Machine Learning and AI (optional)
ENABLE_FRAUD_DETECTION=False
ML_MODEL_PATH=/models
FRAUD_DETECTION_THRESHOLD=0.8

# Blockchain Integration (optional)
ENABLE_BLOCKCHAIN=False
ETHEREUM_NODE_URL=https://mainnet.infura.io/v3/your-project-id
SMART_CONTRACT_ADDRESS=0x...

# Message Queue Configuration
MESSAGE_BROKER=redis  # redis, rabbitmq, aws_sqs
RABBITMQ_URL=amqp://guest:guest@localhost:5672//
AWS_SQS_REGION=us-east-1
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account/queue

# Microservices Configuration (if applicable)
USER_SERVICE_URL=http://localhost:5001
TRANSACTION_SERVICE_URL=http://localhost:5002
NOTIFICATION_SERVICE_URL=http://localhost:5003
PAYMENT_SERVICE_URL=http://localhost:5004

# Container and Orchestration
CONTAINER_REGISTRY=docker.io
IMAGE_TAG=latest
KUBERNETES_NAMESPACE=saas-platform

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Custom Business Logic
ENABLE_CUSTOM_COMMISSION_RULES=True
ENABLE_DYNAMIC_PRICING=False
ENABLE_LOYALTY_PROGRAM=False
LOYALTY_POINTS_RATIO=100  # points per INR

# Development and Debug Settings
ENABLE_SQL_ECHO=False
ENABLE_PROFILER=False
PROFILER_RESTRICTIONS=['*admin*']
EXPLAIN_TEMPLATE_LOADING=False

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
FORCE_UPDATE_VERSION=1.0.0
API_DEPRECATION_WARNINGS=True

# Content Delivery Network
CDN_ENABLED=False
CDN_URL=https://cdn.yourdomain.com
STATIC_URL_PREFIX=/static

# Search and Indexing
ENABLE_ELASTICSEARCH=False
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=saas_platform

# Real-time Features
ENABLE_WEBSOCKETS=False
WEBSOCKET_REDIS_URL=redis://localhost:6379/3
REAL_TIME_NOTIFICATIONS=False

# Geographic and Location Services
ENABLE_GEOLOCATION=False
GEOLOCATION_API_KEY=your-geolocation-api-key
DEFAULT_COUNTRY=IN
DEFAULT_STATE=Maharashtra
DEFAULT_CITY=Mumbai

# Testing and QA
ENABLE_TEST_MODE=False
TEST_PAYMENT_GATEWAY=True
MOCK_EXTERNAL_APIS=False
LOAD_TEST_DATA=False

# Legal and Compliance URLs
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
COOKIE_POLICY_URL=https://yourdomain.com/cookies

# Documentation
API_DOCS_URL=/api/docs
ADMIN_DOCS_URL=/admin/docs
USER_MANUAL_URL=https://docs.yourdomain.com

# Custom Domain Configuration
CUSTOM_DOMAIN_ENABLED=True
DOMAIN_VERIFICATION_TOKEN=your-domain-verification-token
SSL_CERTIFICATE_PATH=/etc/ssl/certs/yourdomain.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/yourdomain.key

